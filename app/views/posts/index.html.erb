<h1>Ivan the Terrible's Blog</h1>

<section class="blog">
<% @posts.each do |post| %>
  <section class="post">
    <h2><%= post.title %></h2>
    <div><%= post.body %></div>
    <div class="post_nav">
      <%= link_to 'Go to post', post %> |
      <%= link_to 'Edit post', edit_post_path(post) %> |
      <%= link_to 'Delete post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </section>
<% end %>

<%= paginate @posts %>
</section>

<br />

<%= link_to 'New Post', new_post_path %>
